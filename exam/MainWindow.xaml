<Window x:Class="exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="Работа с партнерами" Height="600" Width="1410" Icon="/Лого.jpg" FontFamily="Franklin Gothic Medium">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.RowSpan="2" Source="C:\Users\222909071095-1\Desktop\exam\exam\source\Иконка.ico" Width="200"/>
        <ListView Grid.RowSpan="1" Name="ListViewPartners">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding IDPartner}">ID</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding PartnerType}">Тип</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}">Наименование</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Director}">Руководитель</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Email}">Электронная почта</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Phone}">Телефон</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Address}">Юридический адрес</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Inn}">ИНН</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Rating}">Рейтинг</GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Name="btnChange" Click="btnChange_Click" Background="#E0FFFF">Редактировать</Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Name="btnDelete" Click="btnDelete_Click" Background="#E0FFFF">Удалить</Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Width="200" Click="btnCreate_Click" Name="btnCreate" Background="#00CED1" Height="30">Добавить нового партнера</Button>
        </StackPanel>
    </Grid>
</Window>
