<Window x:Class="exam.CreatePartner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam"
        mc:Ignorable="d"
        Title="Создание нового партнера" Height="500" Width="500" Icon="/Лого.jpg" FontFamily="Franklin Gothic Medium">
    <Grid>
        <StackPanel VerticalAlignment="Center" Width="400">
            
            <TextBlock Text="Выберите тип:"/>
            <ComboBox Name="cmbType" Margin="0 5"/>
            
            <TextBlock Text="Введите название:"/>
            <TextBox Name="txtName" Margin="0 5"/>

            <TextBlock Text="Введите руководителя:"/>
            <TextBox Name="txtDirector" Margin="0 5"/>
            
            <TextBlock Text="Введите почту:"/>
            <TextBox Name="txtEmail" Margin="0 5"/>
            
            <TextBlock Text="Введите телефон:"/>
            <TextBox Name="txtPhone" Margin="0 5"/>
            
            <TextBlock Text="Введите адрес:"/>
            <TextBox Name="txtAddress" Margin="0 5"/>
            
            <TextBlock Text="Введите ИНН:"/>
            <TextBox Name="txtInn" Margin="0 5"/>
            
            <TextBlock Text="Введите рейтинг:"/>
            <TextBox Name="txtRating" Margin="0 5"/>

            <Button Name="btnSave" Click="btnSave_Click" Width="200"  Margin="0 5" Background="#00CED1">Сохранить</Button>
        </StackPanel>
    </Grid>
</Window>
